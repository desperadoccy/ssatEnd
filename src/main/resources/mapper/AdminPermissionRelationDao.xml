<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.ccy.ssatweb.dao.AdminPermissionRelationDao">

    <resultMap type="pers.ccy.ssatweb.domain.AdminPermissionRelation" id="AdminPermissionRelationMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="adminId" column="admin_id" jdbcType="INTEGER"/>
        <result property="permissionId" column="permission_id" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="AdminPermissionRelationMap">
        select
          id, admin_id, permission_id, type
        from SSAT.admin_permission_relation
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="AdminPermissionRelationMap">
        select
          id, admin_id, permission_id, type
        from SSAT.admin_permission_relation
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="AdminPermissionRelationMap">
        select
          id, admin_id, permission_id, type
        from SSAT.admin_permission_relation
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="adminId != null">
                and admin_id = #{adminId}
            </if>
            <if test="permissionId != null">
                and permission_id = #{permissionId}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into SSAT.admin_permission_relation(admin_id, permission_id, type)
        values (#{adminId}, #{permissionId}, #{type})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update SSAT.admin_permission_relation
        <set>
            <if test="adminId != null">
                admin_id = #{adminId},
            </if>
            <if test="permissionId != null">
                permission_id = #{permissionId},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from SSAT.admin_permission_relation where id = #{id}
    </delete>

    <delete id="deleteByAdminId">
        delete from admin_permission_relation where admin_id = #{adminId}
    </delete>

</mapper>